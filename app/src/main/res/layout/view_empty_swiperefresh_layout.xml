<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlMovieContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMovies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/defaultBgColor" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/mp_double"
        android:layout_marginRight="@dimen/mp_double"
        android:drawablePadding="@dimen/mp_standard"
        android:drawableTop="@drawable/vec_error"
        android:gravity="center_horizontal"
        android:text="Error!"
        android:textSize="@dimen/text_s"
        android:visibility="gone" />
</RelativeLayout>